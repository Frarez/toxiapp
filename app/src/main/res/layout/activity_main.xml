<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <Button
      android:id="@+id/btnMaps"
      android:layout_width="31dp"
      android:layout_height="29dp"
      android:layout_gravity="center"
      android:layout_marginStart="24dp"
      android:layout_marginTop="32dp"
      android:text="ir al mapa"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/txt_certamen1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="80dp"
      android:ems="10"
      android:hint="Certamen 1"
      android:inputType="number"
      android:textSize="24sp"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="0dp" />

  <EditText
      android:id="@+id/txt_certamen2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:ems="10"
      android:hint="Certamen 2"
      android:inputType="number"
      android:textSize="24sp"
      app:layout_constraintTop_toBottomOf="@+id/txt_certamen1"
      tools:layout_editor_absoluteX="0dp" />

  <EditText
      android:id="@+id/txt_certamen3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:ems="10"
      android:hint="Certamen 3"
      android:inputType="number"
      android:textSize="24sp"
      app:layout_constraintTop_toBottomOf="@+id/txt_certamen2"
      tools:layout_editor_absoluteX="16dp" />

  <EditText
      android:id="@+id/txt_certamen4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:ems="10"
      android:hint="Certamen 4"
      android:inputType="number"
      android:textSize="24sp"
      app:layout_constraintTop_toBottomOf="@+id/txt_certamen3"
      tools:layout_editor_absoluteX="16dp" />

  <Button
      android:id="@+id/btn_calcular"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="68dp"
      android:text="Calcular"
      android:textSize="24sp"
      app:layout_constraintTop_toBottomOf="@+id/txt_certamen4"
      tools:layout_editor_absoluteX="0dp" />

  <TextView
      android:id="@+id/tv_resultado"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="40dp"
      android:text="Resultado: "
      android:textSize="24sp"
      app:layout_constraintTop_toBottomOf="@+id/btn_calcular"
      tools:layout_editor_absoluteX="0dp" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="82dp"
      android:layout_height="75dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@android:drawable/btn_star" />
</androidx.constraintlayout.widget.ConstraintLayout>